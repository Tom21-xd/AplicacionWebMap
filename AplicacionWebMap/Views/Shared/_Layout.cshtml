<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            scroll-behavior: smooth;
        }
    </style>
</head>

<body class="bg-background">
    <!-- Barra de navegación fija -->
    <header>
        <nav class="border-gray-200 bg-[#F1F1F1] px-4 py-2.5 dark:bg-gray-800 lg:px-6">
            <div class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between">
                <a href="" class="flex items-center">
                    <img src="~/img/mapa.png" class="mr-3 h-12 sm:h-16" alt="Logo" />
                    <span class="self-center whitespace-nowrap text-xl font-semibold dark:text-white">TellMapper</span>
                </a>
                <div class="flex items-center lg:order-2">
                    <a href="@Url.Action("Login", "Login")" class="mr-2 rounded-lg px-4 py-2 text-sm font-medium text-gray-800 hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 focus:outline-none dark:text-white lg:px-5 lg:py-2.5 dark:hover:bg-gray-700 dark:focus:ring-gray-800">Iniciar Sesion</a>
                    <button data-collapse-toggle="mobile-menu-2" type="button" class="ml-1 inline-flex items-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 lg:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="mobile-menu-2" aria-expanded="false">
                        <span class="sr-only">Open main menu</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path></svg>
                        <svg class="hidden h-6 w-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </button>
                </div>
                <div class="hidden w-full items-center justify-between lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
                    <ul class="mt-4 flex flex-col font-medium lg:flex-row lg:space-x-8 lg:mt-0">
                        <li>
                            <a href="@Url.Action("Index", "Home")" class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:text-gray-400 dark:border-gray-700 lg:border-0 lg:p-0 dark:hover:bg-gray-700 dark:hover:text-white lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:text-white lg:dark:hover:bg-transparent">Mapa</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Reportes", "Reporte")" class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:text-gray-400 dark:border-gray-700 lg:border-0 lg:p-0 dark:hover:bg-gray-700 dark:hover:text-white lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:text-white lg:dark:hover:bg-transparent">Reporte</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Usuarios", "Usuario")" class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:text-gray-400 dark:border-gray-700 lg:border-0 lg:p-0 dark:hover:bg-gray-700 dark:hover:text-white lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:text-white lg:dark:hover:bg-transparent">Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal con padding top para evitar el solapamiento con el nav -->
    <div class="w-full flex-grow">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
